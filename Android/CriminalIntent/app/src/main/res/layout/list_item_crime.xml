<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:id="@+id/list_item_checkBox"/>
    <TextView
        android:id="@+id/list_item_titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_checkBox"
        android:textStyle="bold"
        android:padding="4dp"
        android:text="Crime Title"/>
    <TextView
        android:id="@+id/list_item_data_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_checkBox"
        android:layout_below="@id/list_item_titleText"
        android:padding="4dp"
        android:text="Crime Data"/>

</RelativeLayout>